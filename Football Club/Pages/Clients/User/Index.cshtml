@page
@model IndexModel
@{
}

<br>
<h2>List of Users</h2>
<a class='btn btn-primary btn-sm' href='/Clients/User/Create'>New User</a>
<table class="table" style="color: white;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Club</th>
            <th>Membership Tier</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.created_at</td>
                <td>@item.club</td>
                <td>@item.membership_tier</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='/Clients/User/Edit?id=@item.id'>Edit</a>
                    <a class='btn btn-danger btn-sm' href='/Clients/User/Delete?id=@item.id'>Delete</a>
                </td>
            </tr>
        }
    </tbody>
